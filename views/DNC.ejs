<style>
    label{
         /* margin-top: 100px; */
         margin-left: 550px;
         color: white;
         font-size: 23px;
    }
    textarea{
        margin-top: 100px;
        background-color: transparent;
        border: 2px solid rgba(255, 255, 255, 0.658);
        color: white;
        text-align: center;
        width: 500px;
        font-size: 20px;
        height: 100px;
        outline:none;

    }
    #button{
        margin-top: 50px;
        margin-left: 800px;
